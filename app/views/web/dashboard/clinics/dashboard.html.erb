<div class="yellow-theme" id="main_content">
    <div class="row new-div">
        <div class="col-md-6">
            <div class="sm-st clearfix">
                <%= link_to ('<i class="fa fa-user-md"></i>').html_safe,@doctors_url,:class => "sm-st-icon st-red" %>
                <div class="sm-st-info red-info">
                    <span><%=@doctors%></span>
                    Doctors
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="sm-st clearfix">
                <%= link_to ('<i class="fa fa-calendar"></i>').html_safe,@appointments_url,:class => "sm-st-icon st-blue" %>
                <div class="sm-st-info blue-info">
                    <span><%=@appointments%></span>
                    Appointments
                    <small>(Today)</small>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="sm-st clearfix">
                <%= link_to ('<i class="fa fa-line-chart"></i>').html_safe,@reports_url,:class => "sm-st-icon st-blue" %>
                <div class="sm-st-info blue-info">
                    <span>Reports</span>
                    <%= @doctors%> Doctors
                </div>
            </div>
        </div>

    </div>

    <!-- Statistics -->
    <div class="row">

        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    Appointments / month
                </header>
                <div class="panel-body"></div>
            </section>
        </div>

    </div>
    <div class="row">

        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    Appointments / 6 months
                </header>
                <div class="panel-body"></div>
            </section>
        </div>

    </div>
</div>
