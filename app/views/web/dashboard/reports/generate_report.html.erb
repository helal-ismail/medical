<div class="row blue-theme" id="main_content">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-md-12">
                <section class="panel">
                    <header class="panel-heading">
                        Reports
                    </header>
                    <input id="hidden" type="hidden" value="<%=@report_url%>">
                    <div class="panel-body">
                        <form class="form form-horizontal actual-width-form" role="form">
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="app_date_from">From</label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control app_date" id="start_date"></div>

                                <label class="col-sm-2 control-label" for="app_date_to">To
                                </label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control app_date" id="end_date"></div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="toList"><%= @label %></label>
                                <div class="col-sm-4">
                                    <select id="ids_list" class="form-control">
                                        <% @items.each do |item| %>
                                        <option value="<%= item.id %>"><%= item.name %></option>
                                        <% end %>
                                    </select>
                                </div>
                                <div class="col-sm-2 hidden-xs hidden-sm"></div>
                                <div class="col-sm-4">
                                    <a id="generate_report" class="btn btn-default opaque-back">GENERATE REPORT</a>
                                </div>
                            </div>

                        </form>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
