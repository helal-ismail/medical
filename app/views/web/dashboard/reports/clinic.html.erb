<div class="row blue-theme" id="main_content">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-md-12">
                <section class="panel">
                    <header class="panel-heading">
                        Reports
                    </header>
                    <input id="hidden" type="hidden" value="<%=@clinic.id%>">
                    <div class="panel-body custom-tabs">
                        <div class="row new-div">
                            <div class="col-md-12">
                                <form class="form form-inline" role="form">
                                    <div class="form-group">
                                        <label for="app_date">From
                                        </label>
                                        <input type="text" class="form-control app_date" id="start_date">
                                    </div>
                                    <div class="form-group">
                                        <label for="app_date">To
                                        </label>
                                        <input type="text" class="form-control app_date" id="end_date">
                                    </div>
                                    <a id="generate_report" data-value="<%= @report_url %>" class="btn btn-default opaque-back">GENERATE REPORT</a>
                                </form>
                                <!--tab nav start-->
                            </div>
                        </div>
                    </div>


                    <div class="panel-body custom-tabs">
                      <div class="row new-div">
                        <div class="col-md-12">
                          <div class=" form-group">
                            <label for="docotrList">Select Doctors :</label>
                            <select multiple id="doctors_list" class="form-control" style="background:none !important">
                              <% @doctors.each do |doctor| %>
                                <option value="<%= doctor.id %>" ><%= doctor.name %></option>
                              <% end %>
                            </select>
                          </div>
                        </div>
                      </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
