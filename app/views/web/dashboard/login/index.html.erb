<div class="row">
    <div class="login-logo col-md-6 col-sm-12 col-xs-12">
        <%= image_tag("logo_and_name.png", :alt => "Appointik") %>
        <!-- <img src="img/logo.png"/> -->
    </div>
</div>
<div class="row green-theme">
    <div class="col-md-6 col-sm-12 col-xs-12">
        <form class="form login-block">
            <h1>Login</h1>
            <div class="form-group">
                <input type="email" class="form-control email" placeholder="Email" id="username" required/>
            </div>
            <div class="form-group">
                <input type="password" class="form-control password" placeholder="Password" id="password" required/>
            </div>
            <button type="submit" class="btn opaque-back">Sign In</button>
        </form>
    </div>
</div>
