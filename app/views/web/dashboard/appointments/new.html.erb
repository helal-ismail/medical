<div class="row blue-theme" id="main_content">
    <div class="col-md-12">
        <!--notification start-->
        <section class="panel">
            <header class="panel-heading">
                Add New Appointment
            </header>
            <div class="panel-body">
                <form class="form-horizontal form" method="get">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Patient Name<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <select id="patient_name" class="form-control" required>
                                <option>Ahmed</option>
                                <option>Mohamed</option>
                                <option>Mahmoud</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Date<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control app_date" id="app_date" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Time<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="time" class="form-control" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2 hidden-xs hidden-sm"></div>
                        <div class="form-btns col-xs-12 col-sm-12 col-md-10 col-lg-10">
                            <button type="submit" class="btn btn-default opaque-back">Submit</button>
                            <%= link_to ('Cancel').html_safe,$url_appointments,class: "btn btn-default transparent-back" %>
                        </div>
                    </div>

                </form>

            </div>
        </section>
        <!--notification end-->
    </div>
</div>
