<div class="row orange-theme" id="main_content">
    <div class="col-md-12">
        <!--notification start-->
        <section class="panel">
            <header id="header_label" class="panel-heading">
                Add New Hospital
            </header>
            <div class="panel-body">
              <input id="hospital_id" type="hidden" value="<%= @hospital_id%>">
              <input id="redirect_url" type="hidden" value="<%= @redirect_url%>">
                <form class="form-horizontal form" method="get">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Hospital Name<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <input type="text" id="name" name="name" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Email<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <input type="email" id="email" name="email" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Phone(s)<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <input type="text" id="phone" name="phone" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Website</label>
                        <div class="col-sm-10">
                            <input type="text" id="website" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Address<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <textarea rows="4" id="address" name="address" class="form-control" required></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2 hidden-xs hidden-sm"></div>
                        <div class="form-btns col-xs-12 col-sm-12 col-md-10 col-lg-10">
                            <!--button type="submit" class="btn btn-default opaque-back">Submit</button-->
                            <a id="add_hospital_btn" class="btn btn-default opaque-back">Submit</a>

                            <%= link_to ('Cancel').html_safe,$url_hospitals,class: "btn btn-default transparent-back" %>
                        </div>
                    </div>

                </form>

            </div>
        </section>
        <!--notification end-->
    </div>
</div>
