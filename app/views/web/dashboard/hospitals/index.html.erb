<div class="row orange-theme">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-md-12">
                <section class="panel">
                    <header class="panel-heading">
                        Hospitals
                    </header>
                    <div class="panel-body">
                        <div class="row new-div">
                            <div class="col-md-12 heading-btn">
                                <%= link_to "Add New Hospital","/hospitals/new",:class => "btn btn-default opaque-back" %>
                            </div>
                        </div>
                        <div class="row new-div">
                            <div class="col-md-12">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @hospitals.each do |hospital| %>
                                        <tr>
                                            <td><%= hospital.name %></td>
                                            <td>
                                                <a href="#" title="Details" role="button">
                                                    <i class="fa fa-info-circle"></i>
                                                </a>
                                                <a href="#" data-target="#confirm_modal" data-toggle="modal" title="Delete" role="button">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
