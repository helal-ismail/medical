<div class="row darkGreen-theme" id="main_content">
    <div class="col-md-12">
        <!--notification start-->
        <section class="panel">
            <header class="panel-heading">
                Add New Patient
            </header>
            <div class="panel-body">
                <form class="form-horizontal form" method="get">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Name<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="name" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Phone(s)<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="phone" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Email
                        </label>
                        <div class="col-sm-10">
                            <input type="email" name="email" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Address
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="address" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Date Of Birth<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="dateOfBirth" class="form-control" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2 hidden-xs hidden-sm"></div>
                        <div class="form-btns col-xs-12 col-sm-12 col-md-10 col-lg-10">
                            <button type="submit" class="btn btn-default opaque-back">Submit</button>
                            <%= link_to ('Cancel').html_safe,$url_patients,class: "btn btn-default transparent-back" %>
                        </div>
                    </div>

                </form>

            </div>
        </section>
        <!--notification end-->
    </div>
</div>
