<div class="row purple-theme" id="main_content">
    <div class="col-md-12">
        <!--notification start-->
        <section class="panel">
            <header class="panel-heading">
                Announcements
            </header>
            <div class="panel-body">
                <form class="form-horizontal form" method="get">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="optionsList" >Annoucements For<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                          <select id="options_list" class="form-control">
                              <option value="1" >Patients</option>
                              <option value="2" >Doctors</option>
                              <option value="3" >All Users</option>
                          </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="optionsList" >City : <span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                          <select id="options_list" class="form-control">
                              <option value="1" >Alexandria, Egypt</option>
                              <option value="2" >Cairo, Egypt</option>
                              <option value="3" >Riadh, KSA</option>
                          </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Message<span class="required">*</span>
                        </label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="5" id="message"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2 hidden-xs hidden-sm"></div>
                        <div class="form-btns col-xs-12 col-sm-12 col-md-10 col-lg-10">
                            <button id="send_btn" type="submit" class="btn btn-default opaque-back">Send Announcement</button>
                        </div>
                    </div>

                </form>

            </div>
        </section>
        <!--notification end-->
    </div>
</div>

















